{
    "name": "dbp/relay-base-person-connector-ldap-bundle",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "api-platform/core": "^2.7.11 || ^3.2",
        "dbp/relay-base-person-bundle": "^0.2.31",
        "dbp/relay-core-bundle": "^0.1.178",
        "dbp/relay-core-connector-ldap-bundle": "^0.2.5",
        "psr/container": "^1.1 || ^2",
        "psr/log": "^1.1.4 || ^2.0 || ^3.0",
        "symfony/cache": "^5.4 || ^6.4",
        "symfony/config": "^5.4 || ^6.4",
        "symfony/dependency-injection": "^5.4 || ^6.4",
        "symfony/event-dispatcher": "^5.4 || ^6.4",
        "symfony/framework-bundle": "^5.4 || ^6.4",
        "symfony/http-foundation": "^5.4 || ^6.4",
        "symfony/http-kernel": "^5.4 || ^6.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.50",
        "mockery/mockery": "^1.6.7",
        "phpstan/phpstan": "^1.10.59",
        "phpstan/phpstan-phpunit": "^1.3.16",
        "phpunit/phpunit": "^10.1",
        "symfony/browser-kit": "^5.4 || ^6.4",
        "symfony/http-client": "^5.4 || ^6.4",
        "symfony/monolog-bundle": "^3.10",
        "symfony/phpunit-bridge": "^7.0",
        "vimeo/psalm": "^5.22.2"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\BasePersonConnectorLdapBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\BasePersonConnectorLdapBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
