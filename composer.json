{
    "name": "dbp/relay-base-person-connector-ldap-bundle",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.2",
        "ext-json": "*",
        "dbp/relay-base-person-bundle": "^0.2.33",
        "dbp/relay-core-bundle": "^0.1.186",
        "dbp/relay-core-connector-ldap-bundle": "^0.2.9",
        "psr/container": "^1.1 || ^2",
        "psr/log": "^1.1.4 || ^2.0 || ^3.0",
        "symfony/cache": "^6.4",
        "symfony/config": "^6.4",
        "symfony/dependency-injection": "^6.4",
        "symfony/event-dispatcher": "^6.4",
        "symfony/framework-bundle": "^6.4",
        "symfony/http-foundation": "^6.4",
        "symfony/http-kernel": "^6.4"
    },
    "require-dev": {
        "api-platform/core": "^3.4 || ^4.1",
        "captainhook/captainhook": "^5.25",
        "friendsofphp/php-cs-fixer": "^3.50",
        "mockery/mockery": "^1.6.7",
        "phpstan/phpstan": "^2.0.0",
        "phpstan/phpstan-phpunit": "^2.0.0",
        "phpstan/phpstan-symfony": "^2.0.0",
        "phpunit/phpunit": "^10.1",
        "symfony/browser-kit": "^6.4",
        "symfony/http-client": "^6.4",
        "symfony/monolog-bundle": "^3.10",
        "symfony/phpunit-bridge": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\BasePersonConnectorLdapBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\BasePersonConnectorLdapBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "post-autoload-dump": "vendor/bin/captainhook install -f",
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
