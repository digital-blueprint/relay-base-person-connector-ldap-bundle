{
    "name": "dbp/relay-base-person-connector-ldap-bundle",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-simplexml": "*",
        "adldap2/adldap2": "^10.3",
        "dbp/relay-auth-bundle": "^0.1.6",
        "dbp/relay-base-person-bundle": "^0.2.20",
        "dbp/relay-core-bundle": "^0.1.116",
        "guzzlehttp/guzzle": "^7.3",
        "league/uri": "^6.5",
        "symfony/event-dispatcher": "^5.4",
        "psr/log": "^1.1.4 || ^2.0 || ^3.0",
        "symfony/framework-bundle": "^5.2",
        "symfony/config": "^5.4",
        "symfony/cache": "^5.4",
        "symfony/http-foundation": "^5.4",
        "symfony/http-kernel": "^5.4",
        "symfony/event-dispatcher-contracts": "^2.5",
        "symfony/service-contracts": "^2.5",
        "psr/container": "^1.1",
        "symfony/dependency-injection": "^5.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "mockery/mockery": "^1.5.1",
        "phpstan/phpstan": "^1.8.11",
        "phpstan/phpstan-phpunit": "^1.2.2",
        "phpunit/phpunit": "^9.5.26",
        "symfony/browser-kit": "^5.4.11",
        "symfony/http-client": "^5.4.15",
        "symfony/monolog-bundle": "^3.8",
        "symfony/phpunit-bridge": "^5.4.14",
        "vimeo/psalm": "^4.29"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\BasePersonConnectorLdapBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\BasePersonConnectorLdapBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
